{
  "name": "flotiqBlogPost",
  "label": "Blog post",
  "schemaDefinition": {
    "type": "object",
    "allOf": [
      {
        "$ref": "#/components/schemas/AbstractContentTypeSchemaDefinition"
      },
      {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string",
            "minLength": 1
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DataSource"
            },
            "minItems": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "author": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DataSource"
            },
            "minItems": 1
          },
          "status": {
            "type": "string",
            "default": "draft",
            "minLength": 1
          },
          "content": {
            "type": "object",
            "minLength": 1,
            "properties": {
              "time": {
                "type": "number"
              },
              "blocks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "text": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": true
                    },
                    "type": {
                      "type": "string"
                    }
                  }
                }
              },
              "version": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "excerpt": {
            "type": "string",
            "minLength": 1
          },
          "headerImage": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DataSource"
            },
            "minItems": 0
          },
          "publish_date": {
            "type": "string",
            "pattern": "^$|^([12]\\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]))T?(([0-1]?[0-9]|2[0-3]):[0-5][0-9])?$"
          },
          "metaDescription": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    ],
    "required": [
      "slug",
      "title",
      "status",
      "excerpt",
      "metaDescription",
      "content",
      "tags",
      "author"
    ],
    "additionalProperties": false
  },
  "metaDefinition": {
    "order": [
      "slug",
      "title",
      "status",
      "publish_date",
      "excerpt",
      "metaDescription",
      "content",
      "headerImage",
      "tags",
      "author"
    ],
    "propertiesConfig": {
      "slug": {
        "label": "Slug",
        "unique": true,
        "helpText": "",
        "inputType": "text"
      },
      "tags": {
        "label": "Tags",
        "unique": false,
        "helpText": "",
        "inputType": "datasource",
        "validation": {
          "relationMultiple": true,
          "relationContenttype": "flotiqBlogTag"
        }
      },
      "title": {
        "label": "Title",
        "unique": false,
        "helpText": "Title of the page - Google displays 50-60 characters.",
        "inputType": "text",
        "isTitlePart": true
      },
      "author": {
        "label": "Author",
        "unique": false,
        "helpText": "",
        "inputType": "datasource",
        "validation": {
          "relationContenttype": "flotiqBlogAuthor"
        }
      },
      "status": {
        "label": "Status",
        "unique": false,
        "options": [
          "draft",
          "public"
        ],
        "helpText": "",
        "inputType": "select"
      },
      "content": {
        "label": "Content",
        "unique": false,
        "helpText": "If you wish to add code with specific language highlight add ```language name``` as the first line of the block, it will not be displayed",
        "inputType": "block",
        "blockEditorTypes": [
          "header",
          "list",
          "image",
          "youtubeEmbed",
          "quote",
          "warning",
          "delimiter",
          "code",
          "table"
        ]
      },
      "excerpt": {
        "label": "Excerpt",
        "unique": false,
        "helpText": "Article excerpt shown on blog post lists",
        "inputType": "textarea"
      },
      "headerImage": {
        "label": "Header Image",
        "unique": false,
        "helpText": "Recommended size 1920x1080 (16:9)",
        "inputType": "datasource",
        "validation": {
          "relationContenttype": "_media"
        }
      },
      "publish_date": {
        "label": "Publish date",
        "unique": false,
        "helpText": "",
        "inputType": "dateTime"
      },
      "metaDescription": {
        "label": "Meta Description",
        "unique": false,
        "helpText": "Page description - shown by Google in search results, limited to 160 chars.",
        "inputType": "textarea"
      }
    }
  }
}
